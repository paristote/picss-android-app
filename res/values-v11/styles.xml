<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Picss application theme for API 11+. This theme completely replaces
        PicssTheme from res/values/styles.xml on API 11+ devices.
    -->
    
    <style name="PicssActionBar"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/picss_orange_light</item>
        <item name="android:titleTextStyle">@style/PicssActionBarTitleText</item>
    </style>
    
    <style name="PicssEditText"
        parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/picss_edit_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    
    <style name="PicssTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:buttonStyle">@style/PicssButton</item>
        <item name="android:imageButtonStyle">@style/PicssButton</item>
        <item name="android:windowBackground">@drawable/picss_bg_gradient</item>
        <item name="android:actionBarStyle">@style/PicssActionBar</item>
        <item name="android:actionMenuTextColor">@color/picss_orange_dark</item>
        <item name="android:editTextStyle">@style/PicssEditText</item>
    </style>

</resources>
